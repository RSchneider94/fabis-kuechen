    <p>#Order: <%= @order.id %></p>
    <p>Product Name: <%= @order.product.name %></p>
    <p>Product Description: <%= @order.product.description %></p>
    <p>Total Order: <%= number_to_currency(@order.total, unit:'â‚¬', separator:',') %></p>
  </div>
</div>