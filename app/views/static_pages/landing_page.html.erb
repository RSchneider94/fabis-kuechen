<h2>Featured Product</h2>
<div id="carouselFeaturedProduct" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselFeaturedProduct" data-slide-to="0" class="active"></li>
    <li data-target="#carouselFeaturedProduct" data-slide-to="1"></li>
  </ol>
  <div class="carousel-inner">
    <% @products.each do |product| %>
      <div class="carousel-item <%= 'active' if product == @products.first %>">
        <%= image_tag(product.image_url, class:'d-block w-100') %>
        <div class="carousel-caption d-none d-md-block">
          <h5><%= link_to product.name, product %></h5>
          <p><%= product.description %></p>
        </div>
      </div>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselFeaturedProduct" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselFeaturedProduct" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
<% if @featured_product %>
  <%= @featured_product.name %>
<% end %>
