<h2>Contact Us</h2>

<%= form_with(url: '/static_pages/danke', method: 'post', local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name, 'Name' %>
    <%= form.text_field :name, class: 'form-control', placeholder: 'Name eingeben...' %>
  </div>
  <div class="form-group">
    <%= form.label :email, 'E-Mail' %>
    <%= form.email_field :email, class: 'form-control', placeholder: 'E-mail eingeben...' %>
  </div>
  <div class="form-group">
    <%= form.label :message, 'Nachricht' %>
    <%= form.text_area :message,
        class: 'form-control',
        placeholder: 'Nachricht schreiben...',
        rows: 5 %>
  </div>
  <%= form.submit 'Senden', class: 'btn btn-dark'%>
<% end %>